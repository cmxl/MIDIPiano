<div class="inputbox">
    @if (string.IsNullOrWhiteSpace(Icon) == false)
    {
        <i class="inputbox-icon @(Icon)"></i>
    }
    <input type="@(IsPassword ? "password" : "text")" 
           placeholder="@Placeholder" 
           @ref="@_textBox"
           @bind="Value" 
           @bind:event="oninput" 
           @onkeyup="CallOnChanged"
           @onblur="@(() => LostFocus.InvokeAsync())"/>
</div>