<div class="lane-chart">
    @if (Value?.Notes.Any() ?? false)
    {
        for (var i = 0; i < Value.AvailableTicks; i++)
        {
            var note = Value.Notes.FirstOrDefault(x => x.Position == i);
            if (note != null)
            {
                <ToneCandle @ref="CandleRef" Value="Tone.FromNote(note)"/>
            }

            if (IsJumpAvailable(i))
            {
                <div class="lane-candle-gap" style="width: @(_gapSize)px;"></div>
                i += (_gapSize - 1);
            }
            else if (note == null)
            {
                <ToneCandle/>
            }
        }
    }
</div>