<div style="@CreateContentStyle()">
    @ChildContent
</div>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Inject]
    private CSSBuilder _cssBuilder { get; set; }

    private string CreateContentStyle()
        => _cssBuilder.Create()
            .SetPadding(new Spacing(10))
            .Build();
}
